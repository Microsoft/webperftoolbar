{
    "compilerOptions": {
        "outDir": "dist/tsc",
        "noImplicitAny": true,
        "module": "es2015",
        "target": "es5",
        "sourceMap": false,
        "listFiles": true,
        "baseUrl": "src",
        "types": [
            "tslib",
            "chai",
            "mocha",
            "sinon"
        ],
        "lib": [ "dom", "es2015" ],
        "paths": {
            "tslib": ["../node_modules/tslib/tslib.d.ts"]
        },
        "moduleResolution": "classic",
        "traceResolution": false,
        "importHelpers": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "./src/**/*"
    ]
}